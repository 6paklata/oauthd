{
	"name": "Yammer",
	"url": "https://www.yammer.com",
	"oauth2": {
		"authorize": {
			"url": "/dialog/oauth",
			"query": {
				"client_id": "{client_id}",
				"response_type": "code",
				"redirect_uri": "{{callback}}"
			}
		},
		"access_token": {
			"url": "/oauth2/access_token.json",
			"method": "post"
		},
		"request": {
			"query": {
				"oauth_token": "{{token}}"
			}
		},
		"parameters": {
			"client_id": "string",
			"client_secret": "string"
		}
	},
	"href": {
		"provider": "https://www.yammer.com/",
		"docs": "https://developer.yammer.com/api/",
		"keys": "https://www.yammer.com/client_applications"
	}
}