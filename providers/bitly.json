{
	"name": "Bitly",
	"oauth2": {
		"authorize": {
			"url": "https://bitly.com/oauth/authorize",
			"query": {
				"client_id": "{client_id}",
				"response_type": "code",
				"redirect_uri": "{{callback}}"
			}
		},
		"access_token": {
			"url": "https://api-ssl.bitly.com/oauth/access_token",
			"method": "post"
		},
		"request": {
			"query": {
				"oauth_token": "{{token}}"
			}
		},
		"parameters": {
			"client_id": "string",
			"client_secret": "string"
		}
	}
}