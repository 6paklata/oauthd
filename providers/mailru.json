{
        "name":"Mail.ru",
        "url":"https://connect.mail.ru/oauth",
        "oauth2":{
                "authorize":{
                        "url":"/authorize",
                        "query":{
                                "client_id":"{client_id}",
                                "response_type":"code",
                                "redirect_uri":"{{callback}}",
                                "scope":"{scope}"
                        }
                },
                "access_token":{
                        "url":"/token",
                        "method":"post"
                },
                "request":{
                        "query":{
                                "oauth_token":"{{token}}"
                        }
                },
                "refresh": {
                        "url": "/token",
                        "query": {
                                "grant_type":"refresh_token",
                                "client_id": "{client_id}",
                                "client_secret": "{client_secret}",
                                "refresh_token":"{{refresh_token}}"
                        }
                },
                "parameters":{
                        "client_id":"string",
                        "client_secret":"string",
                        "scope":{
                                "type":"string",
                                "separator":" ",
                                "cardinality":"*",
                                "values":{
                                        "":   "приложение может получать информацию о вашей анкете, списке друзей, фотографиях и музыке",
                                        "events":    "приложение имеет доступ к событиям пользователя в Моем Мире",
                                        "photos":    "приложение может загружать фотографии",
                                        "guestbook": "приложение может добавлять записи в гостевые книги пользователей",
                                        "stream":    "приложение может добавлять записи в ленту «Что нового» пользователя",
                                        "messages":  "приложение имеет доступ к личным сообщениям пользователя"
                                }
                        }
                }
        },
        "provider":"mailru",
        "href": {
                "keys": "http://api.mail.ru/sites/my/add/",
                "docs": "http://api.mail.ru/docs/",
                "apps": "http://api.mail.ru/sites/my/",
                "provider": "http://api.mail.ru/"
        }
}