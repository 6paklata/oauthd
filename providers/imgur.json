{
	"name": "Imgur",
	"url": "https://api.imgur.com/oauth2",
	"oauth2": {
		"authorize": {
			"url": "/authorize",
			"query": {
				"client_id": "{client_id}",
				"response_type": "code",
				"redirect_uri": "{{callback}}",
				"state": "{{state}}",
				"scope": ""
			}
		},
		"access_token": {
			"url": "/token",
			"method": "post"
		},
		"request": {
			"query": {
				"oauth_token": "{{token}}"
			}
		},
		"parameters": {
			"client_id": "string",
			"client_secret": "string"
		}
	},
	"href": {
		"provider": "http://imgur.com/",
		"docs": "http://api.imgur.com/",
		"apps": "http://imgur.com/account/settings/apps",
		"keys": "https://api.imgur.com/oauth2/addclient"
	}
}